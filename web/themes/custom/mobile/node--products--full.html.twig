
<div class=" products-details">
  <div class="row">
    <div class="col-md-5 left-col mb-md-0 mb-5">
      {{content.field_images}}
    </div>
    <div class="col-md-7 right-col">
      <div class="row">
        <div class="details">
          <div class="col-12">
            <span>{{content.field_brand}}</span>
          </div>
          <div class="name col-12">
            {{content.field_product_name}}
          </div>
          <div class="col-12">
            <h5 class="head">Description</h5>
            <div class="desc">
              {{content.body}}
            </div>
          </div>
          <br>
          <div class="col-12 ">
            <h5 class="head">Features</h5>
            <div class="feature">
              {{content.field_product_features}}
            </div>
            <hr>
          </div>
          <div class="price col-12 mt-5 mb-3">
            <div style="margin-right:-11px;">
            <span>â‚¹</span>
            </div>
            <span>{{content.field_price }}</span>
            <a href="https://www.samsung.com/" target="_blank"><button type="button" value="Add to Cart" class="cart-btn" id="cartbtn">Add to cart</button></a>
            <div class="avail_check" id="avail_check">{{ content.field_availability.0['#markup'] }}</div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>